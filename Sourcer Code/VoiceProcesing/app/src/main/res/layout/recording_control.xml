<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/recording_background_iv"
        android:layout_gravity="center"
        android:background="@drawable/recording_shape"
        android:elevation="2dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recording_icon_iv"
        android:layout_gravity="center"
        android:src="@drawable/m1"
        android:layout_marginBottom="15dp"
        android:paddingRight="3dp"
        android:elevation="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startRecording"
        android:id="@+id/recordingText_tv"
        android:textSize="@dimen/startRecordingTextSize"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:elevation="3dp"/>


</FrameLayout>